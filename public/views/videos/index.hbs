<!doctype html>
<html lang="en">
<head>
    {{#> _head }}
        <title>首页</title>
    {{/_head}}
</head>
<body>
<div class="app">
    {{> header}}
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-8 is-offset-2">
                    <h1 class="is-size-2 has-margin-bottom-3 has-text-weight-bold">Movies</h1>

                    {{! grid modifier: is-6 increases the column gap and is-multiline adds prober breaks to the grid}}
                    <div class="columns is-6 is-variable is-multiline content">
                        {{#each movies}}
                            <div class="column is-one-quarter has-margin-bottom-3">
                                <a href="/videos/{{ids.slug}}">
                                    <img src="{{images.poster}}">
                                    <strong>
                                        {{title}}
                                    </strong>
                                </a>
                            </div>
                        {{/each}}
                    </div>

                    {{> pagination}}
                </div>
            </div>
        </div>
    </section>
</div>
{{> footer}}
</body>
</html>

