                        </ul>
                        <button class="button is-text is-fullwidth" @click="moreClass">更多课程</button>
                    </aside>
                </div>
            </div>
        </div>
    </section>
    <input type="text" id="videoUrl" hidden value="{{url}}">
</div>
{{> footer}}

{{#> _script }}
    <script src="/js/DPlayer.min.js"></script>
    <script>
        console.log($('#videoUrl').val())


        //播放器
        $(function () {
            var dp = new DPlayer({
                container: document.getElementById('dplayer'),
                theme: '#2780E3',
                // autoplay: true,
                video: {
                    url: $('#videoUrl').val()
                },
                contextmenu: [{
                    text: 'Video info',
                    click: function (player) {
                        player.infoPanel.triggle()
                    }
                }]
            })
        })

        //vue
        new Vue({
            el: '#vueApp',
            methods: {
