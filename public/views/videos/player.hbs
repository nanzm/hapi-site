</head>
<body>
<div class="app" id="vueApp">
    {{> header}}
    <section class="section">
        <div class="container">
            <div class="tile is-ancestor is-white">
                <div class="tile is-parent ">
                    <div class="is-child box">
                        <div id="dplayer" style="width:100%;height: 100%;"></div>
                    </div>
                </div>
                <div class="tile is-3 is-parent">
                    <aside class="menu is-child box" style="width: 100%;height: 700px;overflow-y: auto">
                        <p class="menu-label">General</p>
                        <ul class="menu-list">
