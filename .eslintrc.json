{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "indent": [
      "error",
      2
    ]
  },
  "overrides": [
    {
      "files": [
        "models/*.js",
        "utils/*.js",
        "web/*.js",
        "server.js"
      ],
      "excludedFiles": "*.test.js"
    }
  ]
}
