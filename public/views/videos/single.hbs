<!doctype html>
<html lang="en">
<head>
    {{#> _head }}
        <title></title>
        <link rel="stylesheet" href="/css/DPlayer.min.css">
        <style>
        </style>
    {{/_head}}
</head>
<body>
<div class="app">
    {{> header}}
    <section class="section">
        <div class="container box">
            <div id="dplayer"></div>
            <input type="text" id="videoUrl" hidden value="{{url}}">
        </div>
    </section>
</div>
{{> footer}}

{{#> _script }}
    <script src="/js/DPlayer.min.js"></script>
    <script>
        console.log($('#videoUrl').val())

        $(function () {
            var dp = new DPlayer({
                container: document.getElementById('dplayer'),
                theme: '#2780E3',
                autoplay: true,
                video: {
                    url: $('#videoUrl').val()
                },
                contextmenu: [{
                    text: 'Video info',
                    click: function (player) {
                        player.infoPanel.triggle()
                    }
                }]
            })

            console.log(dp)
        })
    </script>
{{/_script}}
</body>
</html>


