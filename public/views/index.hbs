<!-- Hero content: will be in the middle -->

<style>
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: 50% 10%;
        opacity: .8;
        transition: all 1s;
    }

    .shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        background: -moz-radial-gradient(center, circle cover, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 100%);
        background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(0, 0, 0, 0.7)), color-stop(100%, rgba(0, 0, 0, 0.3)));
        background: -webkit-radial-gradient(center, circle cover, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 100%);
        background: -o-radial-gradient(center, circle cover, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 100%);
        background: -ms-radial-gradient(center, circle cover, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 100%);
        background: radial-gradient(center, circle cover, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 100%);
    }

    .hero {
        background-color: black;
        background-size: cover;
        background-position: 50% 10%;
        color: white;
        position: relative;
    }

    .hero.is-dark h2 {}
</style>

{{> hero-movies-shows movieOrShow=movie user=user isHeight='is-fullheight' keepMeSafeFromCsrf=keepMeSafeFromCsrf}}

<section class="section">
    <div class="container">
        <div class="columns content">
            <div class="column">
                <h2>Top Movies</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="columns content">
            {{#each movies}}
                <div class="column">
                    <a href="/movies/{{ids.slug}}">
                        <img src="{{images.poster}}" width="">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</section>

